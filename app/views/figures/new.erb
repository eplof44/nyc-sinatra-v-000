<label>Create a new figure!</label><br>
<form method='POST' action='/figures/new'>
  Name:<input type='text' name='figure[name]' id='figure_name'></input><br>

  Title:<input type='text' name='title[name]' id='new_title'></input><br>
  <label>Select title(s)</label><br>
  <%Title.all.each do |title|%>
    <input type='checkbox' name='figure[title_ids][]' id='title_<%=title.id%>' value='<%=title.id%>'><%=title.name%></input>
  <%end%><br>

  <label>Create a new landmark:</label><br>
  Landmark:<input type='text' name='landmark[name]' id='new_landmark'></input><br>
  <label>Or choose an existing landmark:</label>
  <%Landmark.all.each do |landmark|%>
    <input type='checkbox' name='figure[landmark_ids][]' id='landmark_<%=landmark.id%>' value='<%=landmark.id%>'><%=landmark.name%></input>
  <%end%><br>

  <input type='submit' value='Create New Figure'>



</form>
