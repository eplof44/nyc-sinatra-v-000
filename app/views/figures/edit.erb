<form method='POST' action='/figures/<%=@figure.id%>/edit'>
  Name:<input type='text' name ='figure[name]' id='figure_name' value='<%=@figure.name%>'></input>
  <br>
  <label>Edit titles:</label>
  <%Title.all.each do |title|%>
    <input type='checkbox' name='figure[title_ids][]' id='' value='<%=title.id%>'
    <%='checked' if @figure.titles.include?(title.id)%>><%=title.name%></input>
  <%end%>
  <br>
  New landmark:<input type='text' name='landmark[name]' id='new_landmark'></input>
  <br>
  <input type='submit' value='Edit Figure'>


</form>
